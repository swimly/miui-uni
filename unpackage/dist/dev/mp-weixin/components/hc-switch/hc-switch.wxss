.hc-switch {
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.hc-switch.small .hc-switch__core {
  -webkit-transform-origin: left center;
          transform-origin: left center;
  -webkit-transform: scale(0.8);
          transform: scale(0.8);
}
.hc-switch__core {
  width: 100rpx;
  height: 62rpx;
  border-radius: 31rpx;
  background-color: #EAF0F6;
  position: relative;
  -webkit-transition: 0.3s;
  transition: 0.3s;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.hc-switch__core:before {
  content: "";
  display: inline-block;
  width: 54rpx;
  height: 54rpx;
  background-color: #ffffff;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 0;
  -webkit-transform: translate3d(4rpx, -50%, 0);
          transform: translate3d(4rpx, -50%, 0);
  -webkit-transition: 0.3s;
  transition: 0.3s;
}
.hc-switch.checked .hc-switch__core {
  background-color: #007aff;
}
.hc-switch.checked .hc-switch__core:before {
  -webkit-transform: translate3d(42rpx, -50%, 0);
          transform: translate3d(42rpx, -50%, 0);
}

