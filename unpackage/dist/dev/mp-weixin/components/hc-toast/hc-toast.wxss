.hc-toast__content {
  position: fixed;
  top: 50%;
  left: 50%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 28rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 11.2rpx 28rpx;
  border-radius: 8rpx;
  -webkit-transform: translate(-50%, 0);
          transform: translate(-50%, 0);
  -webkit-transition: 0.3s;
  transition: 0.3s;
  z-index: -1;
  opacity: 0;
}
.hc-toast__content.icon {
  padding: 28rpx 28rpx 14rpx 28rpx;
}
.hc-toast__content.icon .hc-toast__text {
  margin: 14rpx;
}
.hc-toast__content.top {
  top: 10%;
}
.hc-toast__content.center {
  top: 50%;
}
.hc-toast__content.bottom {
  top: 90%;
}
.hc-toast__content.visible {
  z-index: 101;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  opacity: 1;
}
.hc-toast__text {
  word-break: break-all;
}

