.hc-input {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
  font-size: 32rpx;
  height: 88rpx;
  padding: 0 22.4rpx;
  width: 100%;
}
.hc-input:after {
  content: "";
  display: block;
  left: 0;
  top: 0;
  position: absolute;
  width: 200%;
  height: 200%;
  border: 1rpx solid #e6e6e6;
  -webkit-transform-origin: left top;
          transform-origin: left top;
  -webkit-transform: scale(0.5);
          transform: scale(0.5);
  z-index: 1;
}
.hc-input__core {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  position: relative;
  z-index: 10;
  font-size: inherit;
  color: inherit;
  caret-color: #007aff;
}
.hc-input__core .input-placeholder {
  color: #808080;
}
.hc-input__append {
  color: rgba(51, 51, 51, 0.6);
  position: relative;
  z-index: 10;
  margin: 0 22.4rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.hc-input__count {
  margin-left: 16rpx;
}
.hc-input__prefix {
  margin: 0 22.4rpx 0 0;
  position: relative;
  z-index: 10;
}
.hc-input__suffix {
  margin: 0 0 0 22.4rpx;
  color: #007aff;
  position: relative;
  z-index: 10;
}
.hc-input.conner:after {
  border-radius: 16rpx;
}
.hc-input.rounder:after {
  border-radius: 88rpx;
}
.hc-input.subline {
  padding: 0;
}
.hc-input.subline:after {
  border-top: none;
  border-left: none;
  border-right: none;
}
.hc-input.light {
  padding: 0;
}
.hc-input.light:after {
  display: none;
}
.hc-input.primary:after {
  border-color: rgba(0, 122, 255, 0.3);
  background: rgba(0, 122, 255, 0.1);
  color: rgba(0, 122, 255, 0.3);
}
.hc-input.primary .input-placeholder {
  color: rgba(0, 122, 255, 0.6);
}
.hc-input.warning:after {
  border-color: rgba(240, 173, 78, 0.3);
  background: rgba(240, 173, 78, 0.1);
  color: rgba(240, 173, 78, 0.3);
}
.hc-input.warning .hc-input__core {
  caret-color: #f0ad4e;
}
.hc-input.warning .input-placeholder {
  color: rgba(240, 173, 78, 0.6);
}
.hc-input.success:after {
  border-color: rgba(76, 217, 100, 0.3);
  background: rgba(76, 217, 100, 0.1);
  color: rgba(76, 217, 100, 0.3);
}
.hc-input.success .hc-input__core {
  caret-color: #4cd964;
}
.hc-input.success .input-placeholder {
  color: rgba(76, 217, 100, 0.6);
}
.hc-input.danger:after {
  border-color: rgba(221, 82, 77, 0.3);
  background: rgba(221, 82, 77, 0.1);
  color: rgba(221, 82, 77, 0.3);
}
.hc-input.danger .hc-input__core {
  caret-color: #dd524d;
}
.hc-input.danger .input-placeholder {
  color: rgba(221, 82, 77, 0.6);
}

